@page
@model Sankirtana.Web.Pages.Books.IndexBooksPageModel

@{
  ViewBag.Title = "Справочник книг";
}

<div>
  <a href="~/books/editbook" class="btn btn-primary">Добавить книгу</a>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Название</th>
      <th scope="col">Кол-во очков</th>
      <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model.BookList)
    {
      <tr>
        <td><a href="~/books/editbook?id=@book.Id">@book.Name</a></td>
        <td>@book.VolumePoints</td>
        <td>
          <form method="post" action="~/books/DeleteBook">
            <input type="hidden" name="id" value="@book.Id"/>
            <input type="submit" class="btn btn-sm btn-danger" onclick="return OnDeleteClick()" value="Удалить"/>
          </form>
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>

<script>
function OnDeleteClick()
{
  if (confirm("Удалить?")) {
    		return true;
    	} else {
    		return false;
    	}
}
</script>