@page
@model Sankirtana.Web.Pages.Users.Index

@{
    ViewBag.Title = "Пользователи";
}
<h1>@ViewBag.Title</h1>
<br/>
<div>
  <a href="~/users/edituser" class="btn btn-primary">Добавить пользователя</a>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Полное имя</th>
      <th scope="col">Город</th>
      <th scope="col">Телефон</th>
      <th scope="col">Почта</th>
      <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.UsersList)
    {
      <tr>
        <td><a href="~/users/edituser?id=@user.Id">@user.Name</a></td>
        <td>@user.City</td>
        <td>@user.Phone</td>
        <td>@user.Email</td>
        <td>
          <form method="post" action="~/users/DeleteUser">
            <input type="hidden" name="id" value="@user.Id"/>
            <input type="submit" class="btn btn-sm btn-danger" onclick="return OnDeleteClick()" value="Удалить"/>
          </form>
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>

<script>
function OnDeleteClick()
{
  if (confirm("Удалить?")) {
    		return true;
    	} else {
    		return false;
    	}
}
</script>