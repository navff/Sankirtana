@page
@using Sankirtana.Web.Common.Helpers
@model Sankirtana.Web.Pages.Auth.NotAllowed

@{
    ViewBag.Title = "Вам сюда нельзя";
}
<h2>Чтобы сюда попасть, нужно иметь на то права и обязанности.</h2>
@{
    if (User.Identity.IsAuthenticated)
    {
        <p>@User.GetId()</p>        
    }
    else
    {
        <p>Вы не вошли. Найдите волшебную ссылку.</p>
    }
}
